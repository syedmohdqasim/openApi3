pipeline {
	agent any
	
tools {
        
        nodejs 'Node'
    }
	stages {
		
		stage('Build  Zip file for shared flow') {
			steps {
				
				sh ''' if [ ! -d \'openApi3\' ] ; then
 	git clone https://github.com/syedmohdqasim/openApi3.git  
else 
	git -C openApi3 pull https://github.com/syedmohdqasim/openApi3.git 
fi '''
						
				sh ' sharedFlow="sharedflowbundle2" '
				sh ' zip -r ${sharedFlow}.zip openApi3/${sharedFlow} '			
			
			}
		}

}
}
